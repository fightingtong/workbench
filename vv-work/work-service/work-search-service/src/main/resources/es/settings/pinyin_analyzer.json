{
  "analysis": {
    "analyzer": {
      "pinyin_analyzer": {
        "tokenizer": "my_pinyin"
      }
    },
    "tokenizer": {
      "my_pinyin": {
        "type": "pinyin",
        "keep_full_pinyin": true,
        "keep_original": false,
        "limit_first_letter_length": 16,
        "lowercase": true,
        "remove_duplicated_term": true,
        "ignore_pinyin_offset": false,
        "keep_first_letter": true,
        "keep_separate_first_letter": true
      }
    }
  }
}